@using ögrenciKayıtProjesi.Models.EntityFramework
@model List<TBLDERSLER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>DERS ID</th>
        <th>DERS AD</th>
        <th>İŞLEMLER</th>
    </tr>

    @foreach (var drs in Model)
    {
        <tr>
            <td>@drs.DERSID</td>
            <td>@drs.DERSAD</td>
            <td><a href="/Default/Sil/@drs.DERSID" class="btn btn-danger">SİL</a>
            <a href="/Default/DersGetir/@drs.DERSID" class="btn btn-success">GÜNCELLE</a>
            </td>
        </tr>
    }


</table>
<a href="/Default/DersEkle" class="btn btn-success">KAYDET</a>

